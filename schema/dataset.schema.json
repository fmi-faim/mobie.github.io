{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/mobie/mobie.github.io/master/schema/dataset.schema.json",
    "title": "MoBIEDatasetSchema",
    "description": "Schema describing a MoBIE dataset",
    "properties": {
        "dataset": {
            "description": "TODO what other properties do we need?",
            "type": "object",
            "properties": {
                "dimensions": {
                    "type": "array",
                    "description": "TODO what dimensions do we have here",
                    "items": {
                        "type": "integer",
                        "enum": [2, 3]
                    }
                },
                "references": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["dimensions"],
            "additionalProperties": false
        },
        "sources": {
            "description": "",
            "type": "object",
            "additionalProperties": {"$ref": "https://github.com/mobie/mobie.github.io/schema/source.schema.json"},
            "minProperties": 1
        },
        "views": {
            "description": "",
            "type": "object",
            "properties": {
                "default": {"$ref": "https://github.com/mobie/mobie.github.io/schema/view.schema.json"}
            },
            "required": ["default"],
            "additionalProperties": {"$ref": "https://github.com/mobie/mobie.github.io/schema/view.schema.json"}
        }
    },
    "required": ["dataset", "sources", "views"],
    "additionalProperties": false
}
