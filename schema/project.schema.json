{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/mobie/mobie.github.io/master/schema/project.schema.json",
    "title": "MoBIEProjectSchema",
    "description": "Schema describing a MoBIE project",

    "definitions": {
        "s3Store":{
            "type": "object",
            "properties": {
                "endpoint": {
                    "type": "string",
                    "description": "The endpoint url for the s3 bucket."
                },
                "bucket": {
                    "type": "string",
                    "description": "The bucket name."
                },
                "region": {
                    "type": "string",
                    "description": "The region."
                }
            },
            "additionalProperties": false,
            "required": ["endpoint", "bucket", "region"]
        }
    },
    
    "properties": {
        "datasets": {
            "description": "The list of datasets available in this project.",
            "type": "array",
            "items": {
                "type": "string",
                "$ref": "view.schema.json#/definitions/name"
            },
            "minItems": 1
        },
        "defaultDataset": {
            "description": "The default dataset for this project.",
            "type": "string"
        },
        "description": {
            "desription": "The description.",
            "type": "string"
        },
        "references": {
            "description": "Publication or other references for this project",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "specVersion": {
            "description": "The MoBIE spec version of this project.",
            "type": "string",
            "pattern": "0\\.2\\.\\d+"
        },
        "s3Root": {
            "description": "The root s3 bucket for this project. This s3 location is used for accessing the image data when loading a project from github. This is a list so that multiple root stores can be given per project.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/s3Store"
            },
            "minItems": 1
        }
    },
    "required": ["datasets", "defaultDataset", "specVersion"],
    "additionalProperties": false
}
