{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://raw.githubusercontent.com/mobie/mobie.github.io/master/schema/source.schema.json",
    "title": "MoBIESourceSchema",
    "description": "Schema describing a MoBIE source",

    "definitions": {
        "imageDataLocations": {
            "description": "Location of the bdv.xml files for this source, relative to the dataset root directory.",
            "type": "object",
            "properties": {
                "local": {
                    "description": "Location of the bdv.xml file for reading the source image data from the local filesystem.",
                    "type": "string",
                    "pattern": "^\\S+\\.(xml)$"
                },
                "remote": {
                    "description": "Location of the bdv.xml file for reading the source image data from an object store.",
                    "type": "string",
                    "pattern": "^\\S+\\.(xml)$"
                }
            },
            "required": ["local"],
            "additionalProperties": false
        },

        "imageSource": {
            "description": "An image source. The source name (=key for this source entry) must be teh same as the setup name in the bdv.xml.",
            "type": "object",
            "properties": {
                "description": {
                    "description": "Description of this image source.",
                    "type": "string"
                },
                "imageDataLocations": {"$ref": "#/definitions/imageDataLocations"},
                "view": {
                    "description": "The default view for this image source.",
                    "$ref": "https://raw.githubusercontent.com/mobie/mobie.github.io/master/schema/view.schema.json"
                }
            },
            "required": ["imageDataLocations", "view"],
            "additionalProperties": false
        },

        "segmentationSource": {
            "description": "A segmentation source. The source name (=key for this source entry) must be teh same as the setup name in the bdv.xml.",
            "type": "object",
            "properties": {
                "description": {
                    "description": "Description of this segmentation source.",
                    "type": "string"
                },
                "imageDataLocations": {"$ref": "#/definitions/imageDataLocations"},
                "tableDataLocation": {
                    "description": "Location of the table directory for this segmentation source, relative to the dataset root directory.",
                    "type": "string",
                    "pattern": "^\\S+$"
                },
                "view": {
                    "description": "The default view for this segmentation source.",
                    "$ref": "https://raw.githubusercontent.com/mobie/mobie.github.io/master/schema/view.schema.json"
                }
            },
            "required": ["imageDataLocations"],
            "additionalProperties": false
        }
    },

    "type": "object",
    "oneOf": [
        {
            "properties": {
                "image": {"$ref": "#/definitions/imageSource"}
            },
            "required": ["image"],
            "additionalProperties": false
        },
        {
            "properties": {
                "segmentation": {"$ref": "#/definitions/segmentationSource"}
            },
            "required": ["segmentation"],
            "additionalProperties": false
        }
    ]
}
