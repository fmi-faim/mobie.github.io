{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://raw.githubusercontent.com/mobie/mobie.github.io/master/schema/source.schema.json",
    "title": "MoBIESourceSchema",
    "description": "Schema describing a MoBIE source",

    "definitions": {
        "imageFormat": {
            "description": "The image data file format.",
            "type": "string",
            "enum": ["bdv.hdf5", "bdv.n5", "bdv.n5.s3"]
        },

        "tableFormat": {
            "description": "The table data file format. Note that for the `tsv` format, the source must point to the root location with all table files.",
            "type": "string",
            "enum": ["tsv"]
        },

        "imageData": {
            "description": "Description of the image data for this source, including the file format and the location of the data.",
            "type": "object",
            "properties": {
                "fileSystem": {
                    "description": "Source for the image data on the local filesystem.",
                    "type": "object",
                    "properties": {
                        "format": {"$ref": "#/definitions/imageFormat"},
                        "source": {
                            "description": "The location of the image data 'entry point', e.g. the xml file for bdv file formats, relative to the dataset location on the filesystem.",
                            "type": "string"
                        }
                    },
                    "required": ["format", "source"]
                },
                "gitHub": {
                    "description": "Source for the image data on github.",
                    "type": "object",
                    "properties": {
                        "format": {"$ref": "#/definitions/imageFormat"},
                        "source": {
                            "description": "The location of the image data 'entry point', e.g. the xml file for bdv file formats, relative to the dataset location on github.",
                            "type": "string"
                        }
                    },
                    "required": ["format", "source"]
                },
                "s3store": {
                    "description": "Source for the image data on an s3 object store.",
                    "type": "object",
                    "properties": {
                        "format": {"$ref": "#/definitions/imageFormat"},
                        "source": {
                            "description": "The location of the image data 'entry point', e.g. the xml file for bdv file formats, full s3 address.",
                            "type": "string"
                        }
                    },
                    "required": ["format", "source"]
                }
            },
            "additionalProperties": false,
            "minProperties": 1
        },

        "tableData": {
            "description": "Description of the table data for this source, including the format and the location of the table data.",
            "type": "object",
            "properties": {
                "fileSystem": {
                    "description": "Source for the table data on the local filesystem.",
                    "type": "object",
                    "properties": {
                        "format": {"$ref": "#/definitions/tableFormat"},
                        "source": {
                            "description": "The location of the table data, relative to the dataset location on the filesystem.",
                            "type": "string"
                        }
                    },
                    "required": ["format", "source"]
                },
                "gitHub": {
                    "description": "Source for the table data on github.",
                    "type": "object",
                    "properties": {
                        "format": {"$ref": "#/definitions/tableFormat"},
                        "source": {
                            "description": "The location of the table data, relative to the dataset location on github.",
                            "type": "string"
                        }
                    },
                    "required": ["format", "source"]
                },
                "s3store": {
                    "description": "Source for the image data on an s3 object store.",
                    "type": "object",
                    "properties": {
                        "format": {"$ref": "#/definitions/tableFormat"},
                        "source": {
                            "description": "The location of the table data, full s3 address.",
                            "type": "string"
                        }
                    },
                    "required": ["format", "source"]
                }
            },
            "additionalProperties": false,
            "minProperties": 1
        },

        "imageSource": {
            "description": "An image source. The source name (=key for this source entry) must be teh same as the setup name in the bdv.xml.",
            "type": "object",
            "properties": {
                "description": {
                    "description": "Description of this image source.",
                    "type": "string"
                },
                "imageData": {"$ref": "#/definitions/imageData"}
            },
            "required": ["imageData"],
            "additionalProperties": false
        },

        "segmentationSource": {
            "description": "A segmentation source. The source name (=key for this source entry) must be teh same as the setup name in the bdv.xml.",
            "type": "object",
            "properties": {
                "description": {
                    "description": "Description of this segmentation source.",
                    "type": "string"
                },
                "imageData": {"$ref": "#/definitions/imageData"},
                "tableData": {"$ref": "#/definitions/tableData"}
            },
            "required": ["imageData"],
            "additionalProperties": false
        }
    },

    "type": "object",
    "oneOf": [
        {
            "properties": {
                "image": {"$ref": "#/definitions/imageSource"}
            },
            "required": ["image"],
            "additionalProperties": false
        },
        {
            "properties": {
                "segmentation": {"$ref": "#/definitions/segmentationSource"}
            },
            "required": ["segmentation"],
            "additionalProperties": false
        }
    ]
}
